<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:foregroundTint="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="79dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="252dp"
        android:backgroundTint="#6200EA"
        android:gravity="center"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <TextView
        android:id="@+id/Heading"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="Рассчет ежемесячного платежа по ипотеке"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text1"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="228dp"
        android:hint="Введите сумму ипотеки"
        android:inputType="number"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text2"
        android:layout_width="143dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="104dp"
        android:hint="Введите процентную ставку"
        android:inputType="number"
        android:text=""
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <EditText
        android:id="@+id/text3"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="116dp"
        android:hint="Введите срок ипотеки"
        android:inputType="number"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <EditText
        android:id="@+id/text4"
        android:layout_width="190dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        android:hint="Введите ваш ежемесяный доход"
        android:inputType="number"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3" />

    <TextView
        android:id="@+id/resultTextEdit"
        android:layout_width="103dp"
        android:layout_height="220dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="252dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836" />

</androidx.constraintlayout.widget.ConstraintLayout>